{
  "manifest_version": 2,
  "name": "Esportal Stand-In Game Notifier",
  "version": "1.0",
  "description": "Get notified when stand-in games are available on Esportal.",
  "permissions": [
    "notifications",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    }
  }
}
